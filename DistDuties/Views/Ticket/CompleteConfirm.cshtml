
@{
    ViewBag.Title = "CloseConfirm";
}



<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Confirm your action</h2>

            @using (Html.BeginForm("CloseConfirm", "Ticket", FormMethod.Post))
            {
                <input type="submit" value="Yes" class="btn btn-custom" name="confirm" />
                <input type="submit" value="No" class="btn btn-custom" name="confirm" />

                <input type="hidden" value="@ViewBag.ticketId" name="ticketId"/>
            }
        </div>
    </div>
</div>